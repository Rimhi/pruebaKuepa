{% extends 'base.html.twig' %}

{% block title %}Registrate!{% endblock %}

{% block body %}

    
<div class="example-wrapper">

    
    {% if error %}
        <div class="alert alert-error">
            {{error.messagekey|trans(error.messageData,'security')}}
        </div>
    {% endif %}
    {% if app.user %}
        <h2> Bienvenido  {{app.user.name  ~ " " ~ app.user.surname}}</h2>
        <h3>Te has apuntado al Programa: {{app.user.program.name}}</h3>
        
    {% else %}
    <h1>Inicia Sesion</h1>
        <form action="{{path('login')}}" method="POST">
        
        <p><label>Email: </label></p>
        <p><input type="email" id="username" name="_username" value="{{ last_username }}"></p>
        <p><label>Contrase√±a: </label></p>
        <input type="password" id="password" name="_password">
        <input type="submit">
    </form>
    {% endif %}

    
</div>

{% endblock %}